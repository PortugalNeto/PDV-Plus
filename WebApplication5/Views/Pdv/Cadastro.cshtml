@{
    ViewBag.Title = "Cadastro PDV";
    string response = ViewBag.response;
}

@if (!string.IsNullOrEmpty(response))
{
    <h4>@response</h4>
}

<h2>Cadastro de PDV</h2>

<form action="/pdvplus/pdv/cadastro" method="post">
    <div class="form-group">
        <label for="nome">Estação</label>
        <input type="text" name="estacao" class="form-control" id="Codigo" placeholder="Estação" required>
    </div>
    <div class="form-group">
        <label for="PDV">Número do Sigom</label>
        <input type="text" name="pdv" class="form-control" id="pdv" placeholder="Número do PDV" required>
    </div>
    <div class="form-group">
        <label for="data">Código Sigom</label>
        <input type="text" name="codigo" class="form-control" id="data" placeholder="Código Sigom" required>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

