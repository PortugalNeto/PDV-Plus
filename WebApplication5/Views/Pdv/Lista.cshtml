@{
    ViewBag.Title = "Lista";
    List<Entities.Pdv> lstPdv = ViewBag.ListaPdv;
}
<br />

<form action="/pdvplus/pdv/lista" method="get"> 
    <div class="form-check form-check-inline">
        <input type="text" name="estacao" class="form-control" id="estacao" placeholder="Filtrar por Estação">
        <button type="submit" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
            </svg>
        </button>
    </div>    
</form>
<hr />


<h3 class="text-center">Lista de PDVs Cadastrados</h3>
<br />
<br />
<table class="table">
    <thead class="thead-dark">
        <tr>            
            <th scope="col">Id</th>
            <th scope="col">Estação</th>
            <th scope="col">Número Pdv</th>
            <th scope="col">Código</th>
            <th scope="col">Status</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pdv in lstPdv)
        {
            <tr>
                <th scope="row">@pdv.Id</th>
                <td>@pdv.Estacao</td>
                <td>@pdv.Numero</td>
                <td>@pdv.Codigo</td>
                <td>@pdv.Status</td>
                <td>
                    <a href="/pdvplus/pdv/edita?id=@pdv.Id">
                        <b>Editar</b>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 20 20">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                    &nbsp;
                    ||
                    &nbsp;
                    <a class="text-danger" href="/pdvplus/pdv/excluir?id=@pdv.Id">
                        <b>Excluir</b>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-trash-fill" viewBox="0 0 20 20">
                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

